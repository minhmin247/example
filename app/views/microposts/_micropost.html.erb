<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.gravatar_size_2),
    micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t("micropost.text4") %>
    <%= time_ago_in_words micropost.created_at %>
    <%= t("micropost.text5") %>
    <% if micropost.user.current_user? current_user %>
      <%= link_to t("user_index.delete"), micropost, method: :delete,
        data: {confirm: t("micropost.sure")} %>
    <% end %>
  </span>
</li>
